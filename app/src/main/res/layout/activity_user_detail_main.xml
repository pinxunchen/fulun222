<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_user_details"
            >

            <TextView
                android:id="@+id/tv_name"
                android:text="個案名字"
                android:textSize="30dp"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_id" />


            <TextView
                android:id="@+id/tv_id"
                android:text="A123456789"
                android:textSize="25dp"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>





        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_user_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_name_id">

            <TextView
                android:id="@+id/identity"
                android:text="身分別："
                android:padding="8dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_identity"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_identity"
                android:text="一般戶"
                android:textSize="20dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/identity"
                app:layout_constraintTop_toTopOf="parent"/>




            <TextView
                android:id="@+id/address"
                android:text="地址："
                android:textSize="20dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/identity"
                app:layout_constraintBottom_toTopOf="@id/tv_address"/>
            <TextView
                android:id="@+id/tv_address"
                android:text="台北市xx區xxx路"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintLeft_toLeftOf="parent"/>



            <TextView
                android:id="@+id/phone"
                android:text="電話："
                android:textSize="20dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_phone"
                app:layout_constraintTop_toBottomOf="@id/tv_address"/>
            <TextView
                android:id="@+id/tv_phone"
                android:text="0912345678"
                android:textSize="20dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/phone"
                app:layout_constraintTop_toBottomOf="@id/tv_address" />




            <TextView
                android:id="@+id/amount"
                android:text="輔具餘額："
                android:textSize="20dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_amount"
                app:layout_constraintTop_toBottomOf="@id/phone"/>
            <TextView
                android:id="@+id/tv_amount"
                android:text="1000"
                android:textSize="20dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/amount"
                app:layout_constraintTop_toBottomOf="@id/tv_phone" />

        </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.cardview.widget.CardView>



